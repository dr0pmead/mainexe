{
  "name": "rubikomconnect",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "build": {
    "appId": "com.rubikom.connect",
    "productName": "AdminRubikom",
    "asar": true,
    "asarUnpack": [
      "src/icon.ico",
      "preload.js"
    ],
    "publish": {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "your-repo-name"
    },
    "files": [
      "src/**/*",
      "models/**/*",
      "icon.ico",
      "preload.js",
      "user.html",
      "notification.html",
      "utils/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "shortcutName": "Рубиком Администратор",
      "allowToChangeInstallationDirectory": true,
      "uninstallerIcon": "build/icon.ico",
      "installerIcon": "build/icon.ico",
      "uninstallDisplayName": "Рубиком Администратор",
      "runAfterFinish": true
    },
    "squirrelWindows": {
      "iconUrl": "https://rubikom.kz/",
      "setupIcon": "build/icon.ico",
      "shortcutName": "Рубиком Администратор"
    }
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@fluentui/react": "^8.121.13",
    "@fluentui/react-components": "^9.56.3",
    "@fluentui/react-icons": "^2.0.266",
    "axios": "^1.7.9",
    "babel-loader": "^9.2.1",
    "crypto-js": "^4.2.0",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.7",
    "electron-log": "^5.2.4",
    "electron-updater": "^6.3.9",
    "iconv-lite": "^0.6.3",
    "moment": "^2.30.1",
    "mongoose": "^8.8.4",
    "node-disk-info": "^1.3.0",
    "node-gyp": "^11.0.0",
    "node-notifier": "^10.0.1",
    "node-widgets": "^1.1.3",
    "node-wmi": "^0.0.5",
    "postcss-loader": "^8.1.1",
    "ps-list": "^8.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.8.1",
    "style-loader": "^4.0.0",
    "sudo-prompt": "^9.2.1",
    "systeminformation": "^5.23.5",
    "uuid": "^11.0.3",
    "webpack": "^5.97.0",
    "webpack-cli": "^5.1.4",
    "winreg": "^1.2.5",
    "wmi-client": "^0.5.0"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "electron": "^25.3.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16"
  }
}
